// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model File {
  id        String   @id @default(uuid())
  name      String
  url       String
  size      Int
  mimeType  String
  createdAt DateTime @default(now())
  queue     Queue?
  chunks    Chunk[]
}

model Chunk {
  id            String   @id @default(uuid())
  fileId        String
  file          File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  chunkIndex    Int
  text          String
  pageNumber    Int?
  chunkStrategy String
  startChar     Int?
  endChar       Int?
  createdAt     DateTime @default(now())
  
  @@unique([fileId, chunkIndex])
  @@index([fileId])
}

model Queue {
  id        String      @id @default(uuid())
  fileId    String      @unique
  file      File        @relation(fields: [fileId], references: [id], onDelete: Cascade)
  status    QueueStatus
  lastError String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  @@index([status])
}

enum QueueStatus {
  queued
  processing
  success
  error
}
